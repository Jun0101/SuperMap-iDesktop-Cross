#sidebar
  width: sidebar-width
  float: left
  padding-bottom: 40px
  opacity: 0.8
  margin-left: sidebar-width * -1
  display: none
  @media mq-normal
    display: block

.sidebar-title
  margin-top: 10px
  padding: 5px 0
  font-family: font-title
  font-weight: bold
  font-size 15px
  color: color-link
  display: inline-block
  line-height: 1

.sidebar-link
  font-family: font-title
  display: block
  color: color-default
  text-decoration: none
  padding: 5px 0
  line-height: 1
  position: relative
  width: 100%
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
  &.current
    color: color-link
  &:hover
    color: color-link-hover
    
.sidebar-subtitle
  margin-top: 5px
  padding 7px 15px
  font-size 14px
  font-weight: bold 
  font-family: font-title
  color: #000
  display: inline-block
  line-height: 1em
  outline 0
  &:hover
    background-color #F2F2F2
